{
    "compilerOptions": {
        "declaration": true,
        "noResolve": false,
        "module": "ESNext",
        "target": "ESNext",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "outDir": "./dist/",
        "lib": ["es5", "es2015.iterable", "dom", "esnext"]
    },

    "include": ["./src/**/*"],

    "exclude": ["dist", "node_modules"]
}
